<Window x:Class="WpfAdminPanel.Views.LoginPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в админ-панель" 
        Height="300" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">

    <Window.Background>
        <ImageBrush ImageSource="/Views/Img/LoginPassword.jpg" Stretch="Uniform" Opacity="0.25" />
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Имя пользователя:" 
                       Background="Transparent" 
                       Foreground="Orange" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       HorizontalAlignment="Left"/>

            <TextBox x:Name="LoginTextBox" Height="25" Margin="0,0,0,20" FontSize="16"/>
            <TextBlock Text="Пароль:" 
                       Foreground="Orange" 
                       Background="Transparent"
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold" 
                       FontSize="16"
                       HorizontalAlignment="Left"/>

            <Grid>
                <TextBox x:Name="TextBox_PasswordCheck"
                         Height="25"
                         FontSize="16"
                         TextChanged="TextBox_TextChanged"
                         Visibility="Collapsed"
                         />

                <PasswordBox x:Name="PasswordBox_Check" 
                             Height="25"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Visibility="Visible" FontSize="16"
                             />

                <Button HorizontalAlignment="Right"
                        Background="Transparent"
                        Width="25"
                        Height="25"
                        Click="ToggleVisibilityClick" 
                        FontSize="16"
                        BorderBrush="Transparent">
                    <Image Source="/Views/hide_icon.ico"/>
                </Button>
            </Grid>

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Content="Войти"
                    Width="80"
                    Height="25"
                    Margin="0,0,10,0"
                    Click="LoginClick" FontSize="16" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFDAB24A" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button Content="Отмена" 
                    Width="80"
                    Height="25"
                    Click="CancelButton_Click"
                    FontSize="16">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFDAB24A" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackPanel>
    </Grid>
</Window>
