<Window x:Class="WpfAdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Админ-панель" Height="610" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <ComboBox Grid.Row="0"
                  IsEditable="True"
                  Text="Выберите товар или начните вводить"
                  ItemsSource="{Binding Products, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="CarModel"/>




        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" Margin="0,10,0,10">


            <TextBlock Text="Модель:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Text="{Binding SelectedProduct.CarModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,5"/>

            <TextBlock Text="Цена:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Text="{Binding SelectedProduct.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,5"/>

            <TextBlock Text="Краткое описание:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Text="{Binding SelectedProduct.ShortDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,5"/>

            <TextBlock Text="Полное описание:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Text="{Binding SelectedProduct.LongDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,5"/>

            <TextBlock Text="Фотография:" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            <Button Content="Выбрать фото" Command="{Binding SelectImageCommand}"
                    Width="120"
                    Margin="-250,-20,0,0"/>
            <Border BorderBrush="Gray"
                    CornerRadius="30" 
                    Width="500" 
                    Height="230" 
                    HorizontalAlignment="Center"
                    Background="LightGray"
                    Margin="0,10,0,0"
                    ClipToBounds="True"
                    AllowDrop="True">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Drop">
                        <i:InvokeCommandAction Command="{Binding ImageDropCommand}" CommandParameter="{Binding}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <Border.Clip >
                    <RectangleGeometry Rect="0,0,500,230" RadiusX="30" RadiusY="30"/>
                </Border.Clip>

                <Image Source="{Binding SelectedProduct.Img, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Center"
                        Stretch="Fill"
                        Width="500"
                        Height="230"/>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Новый товар" Command="{Binding NewProductCommand}" Width="120" Margin="5"/>
            <Button Content="Добавить" Command="{Binding AddCommand}" Width="120" Margin="5"/>
            <!--<Button Content="Обновить" Command="{Binding UpdateCommand}" Width="120" Margin="5"/>-->
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="120" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
