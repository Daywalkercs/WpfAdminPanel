<Window x:Class="WpfAdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:WpfAdminPanel.Converters" 
        Height="600" 
        Width="600">

    <Window.Resources>
        <local:ImagePathToBitmapConverter x:Key="ImagePathConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
            <ToolBar Grid.Row="0" VerticalAlignment="Top">
                <Button Content="Новый товар" Command="{Binding LoadCommand}" Width="100" Margin="5"/>
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Margin="5"/>
                <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5"/>
                <Button Content="Выбрать фото" Command="{Binding SelectImageCommand}" Width="100" Margin="5"/>
            <Button Content="Стрелка" Width="100" Margin="5"/>
            </ToolBar>
        

        <ComboBox Grid.Row="1"
                  Margin="10,5,10,0"
                  IsEditable="True"
                  Text="{Binding ComboBoxText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Products, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="CarModel"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,5,10,0">
            <TextBlock Text="Модель:" Margin="0,0,0,2" Width="280" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedProduct.CarModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" 
                     Margin="0,0,0,0" 
                     Width="280"
                     HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,5,10,0">
            <TextBlock Text="Цена:" Margin="0,0,0,2" Width="280" HorizontalAlignment="Right" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedProduct.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" 
                     Margin="0,0,0,0" 
                     Width="280" 
                     HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10,5,10,0">
            <TextBlock Text="Краткое описание:" Margin="0,0,0,2" Width="280" FontWeight="Bold" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding SelectedProduct.ShortDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" 
                     Margin="0,0,0,0" 
                     Width="280" 
                     Height="150"
                     HorizontalAlignment="Left" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,5,10,0">
            <TextBlock Text="Полное описание:" Margin="0,0,0,2" Width="280" FontWeight="Bold" HorizontalAlignment="Right"/>
            <TextBox Text="{Binding SelectedProduct.LongDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" 
                     Margin="0,0,0,0" 
                     Width="280" 
                     Height="150" 
                     HorizontalAlignment="Right" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>



        <StackPanel Grid.Row="4">
            <TextBlock Text="Фотография:" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,5,10,0"/>

            <Border BorderBrush="Gray"
                    CornerRadius="30" 
                    Width="500" 
                    Height="230" 
                    HorizontalAlignment="Center"
                    Background="LightGray"
                    Margin="0,5,0,0"
                    ClipToBounds="True"
                    AllowDrop="True"
                    PreviewDragOver="Border_PreviewDragOver">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Drop">
                        <i:InvokeCommandAction Command="{Binding ImageDropCommand}" PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <Border.Clip >
                    <RectangleGeometry Rect="0,0,500,230" RadiusX="30" RadiusY="30"/>
                </Border.Clip>

                <Grid>
                    <TextBlock Text="Перетащите изображение сюда"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="Medium"
                               Foreground="Gray"
                               Visibility="{Binding SelectedProduct.Img, 
                                                    Converter={StaticResource StringToVisibilityConverter}}"/>

                    <Image Source="{Binding SelectedProduct.Img, Mode=TwoWay, Converter={StaticResource ImagePathConverter}}"
                           HorizontalAlignment="Center"
                           Stretch="Fill"
                           Width="500"
                           Height="230"
                           Visibility="{Binding SelectedProduct.Img, 
                                                 Converter={StaticResource StringToVisibilityConverter}, 
                                                 ConverterParameter=Invert}"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Новый товар" Command="{Binding LoadCommand}" Width="120" Margin="5"/>
            <Button Content="Добавить" Command="{Binding AddCommand}" Width="120" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="120" Margin="5"/>
            <Button Content="Выбрать фото" Command="{Binding SelectImageCommand}"
        Width="120"
        Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
